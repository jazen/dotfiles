[url "git://github.com/"]
	insteadOf = gh:
[alias]
	trash = reset HEAD --hard
	unstage = reset HEAD --
	last = log -1 HEAD
  tree = log --oneline --graph --decorate --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  fix = commit --amend
  patch = !git --no-pager diff --no-color
  stash-all = stash save --include-untracked
  prune = fetch --prune
[rerere]
	enabled = true
	autoupdate = true
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autoStash = true
[pager]
  diff = diff-so-fancy | less --tabs=2 -RFX --pattern '^(Date|added|deleted|modified): '
[diff]
	renames = copies
	mnemonicprefix = true
