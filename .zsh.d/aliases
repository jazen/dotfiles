# emacs
alias e='emacs'
alias se='sudo emacs'

# git
alias gst='git status'
alias gdf='git diff'
alias ga='git add'
alias gai='git add --interactive'
alias gap='git add -p'
alias gc='git commit -m'
alias gca='git commit -a -m'
alias gcam='git commit --amend -C HEAD'
alias gp='git push'
alias go='git checkout'
alias gl='git log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short'

# bundler
alias bx='bundle exec'

# ls
alias ls='ls -c -GpF'
alias la='ls -ac -GpF'
alias ll='ls -lah -GpF'
alias lsd='ls -d -GpF */'

# ls + grep
alias lsg='ls -GpF | g'
alias lag='ls -a -GpF | g'
alias llg='ls -lah -GpF | g'

# ruby/rails
alias rc='ruby script/console'
alias rcp='ruby script/console production'
alias rs='ruby script/server'
alias td='tail -f log/development.log'
alias tp='tail -f log/production.log'

# Colorize grep
alias g='grep --color=always'
alias gi='grep -i --color=always'

# Master chief
alias psa='ps auxf'
alias psg='ps aux | g'
